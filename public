<body>
  <div class="form-container">
    <h1>نموذج عضوية Nawah</h1>
    <div class="nft-preview" id="nftPreview"></div>
    <form id="membershipForm"></form>
    <button onclick="submitForm()">تسجيل</button>
    <div class="social-buttons">
      <a href="https://twitter.com/intent/tweet?text=انضموا%20إلى%20نموذج%20عضوية%20Nawah%20الجديد%20مع%20NFT%20حصري!" class="twitter" target="_blank">Twitter</a>
      <a href="https://www.facebook.com/sharer/sharer.php?u=https://example.com" class="facebook" target="_blank">Facebook</a>
      <a href="https://wa.me/?text=انضموا%20إلى%20نموذج%20عضوية%20Nawah%20الجديد%20مع%20NFT%20حصري!" class="whatsapp" target="_blank">WhatsApp</a>
    </div>
  </div>

  <script>
    const form = document.getElementById('membershipForm');
    const nftContainer = document.getElementById('nftPreview');
    const jsonURL = 'https://raw.githubusercontent.com/nawahtkui/nawah-token-ui/70d3140f65e7fc5413941ab21b23cc8836291f40/public/nawah_membership_form.json';

    // صور NFT حقيقية للفنانين الفائزين بجوائز الأوسكار والغرامي 2025
    const nftImages = [
      'https://example.com/nft1.jpg', // استبدل هذا بالرابط الفعلي لصورة NFT
      'https://example.com/nft2.jpg', // استبدل هذا بالرابط الفعلي لصورة NFT
      'https://example.com/nft3.jpg'  // استبدل هذا بالرابط الفعلي لصورة NFT
    ];

    nftImages.forEach(src => {
      const img = document.createElement('img');
      img.src = src;
      nftContainer.appendChild(img);
    });

    fetch(jsonURL)
      .then(res => res.json())
      .then(data => {
        data.fields.forEach(field => {
          const label = document.createElement('label');
          label.textContent = field.label;
          const input = document.createElement('input');
          input.type = field.type;
          input.name = field.name;
          if (field.required) input.required = true;
          form.appendChild(label);
          form.appendChild(input);
        });
      });

    function submitForm() {
      const formData = {};
      new FormData(form).forEach((value, key) => { formData[key] = value; });
      console.log('تم إرسال النموذج:', formData);
      alert('تم إرسال نموذج العضوية بنجاح!');
    }
  </script>
